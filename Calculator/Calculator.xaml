<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  d:DesignWidth="1920"
  d:DesignHeight="1080" Width="460" Height="570" Background="#FF646464" d:DataContext="Calculator_Structure Data">
  <Grid>
    <StackPanel x:Name="PrimaryStack" Margin="10,10,10,10">
      <StackPanel Height="100" Orientation="Horizontal" Margin="0,5,0,5">
        <Border BorderThickness="1" Width="320" Background="#FF323232" CornerRadius="2,2,2,2" Margin="5,0,5,0">
          <TextBlock TextWrapping="Wrap" TextAlignment="Right" Foreground="#FFFFFFFF" FontSize="20" Text="{Binding Path=Text}" Width="300" Canvas.Right="0" Canvas.Bottom="0" VerticalAlignment="Center"/>
        </Border>
        <Button Height="100" Content="CE" Background="#FF323232" Foreground="#FFFFFFFF" FontSize="20" Width="100" Margin="5,0,5,0" Command="{Binding Path=ClearButtonEvent}"/>
      </StackPanel>
      <StackPanel Height="100" Orientation="Horizontal" Margin="0,5,0,5">
        <Button Width="100" Height="100" Margin="5,0,5,0" Content="7" Background="#FF323232" Foreground="#FFFFFFFF" FontSize="20" Command="{Binding Path=SevenButtonEvent}"/>
        <Button Width="100" Height="100" Margin="5,0,5,0" Content="8" Background="#FF323232" Foreground="#FFFFFFFF" FontSize="20" Command="{Binding Path=EightButtonEvent}"/>
        <Button Width="100" Height="100" Margin="5,0,5,0" Content="9" Background="#FF323232" Foreground="#FFFFFFFF" FontSize="20" Command="{Binding Path=NineButtonEvent}"/>
        <Button Width="100" Height="100" Margin="5,0,5,0" Content="รท" Background="#FF323232" Foreground="#FFFFFFFF" FontSize="20" Command="{Binding Path=DivisionButtonEvent}"/>
      </StackPanel>
      <StackPanel Height="100" Orientation="Horizontal" Margin="0,5,0,5">
        <Button Width="100" Height="100" Margin="5,0,5,0" Content="4" Background="#FF323232" Foreground="#FFFFFFFF" FontSize="20" Command="{Binding Path=FourButtonEvent}"/>
        <Button Width="100" Height="100" Margin="5,0,5,0" Content="5" Background="#FF323232" Foreground="#FFFFFFFF" FontSize="20" Command="{Binding Path=FiveButtonEvent}"/>
        <Button Width="100" Height="100" Margin="5,0,5,0" Content="6" Background="#FF323232" Foreground="#FFFFFFFF" FontSize="20" Command="{Binding Path=SixButtonEvent}"/>
        <Button Width="100" Height="100" Margin="5,0,5,0" Content="ร" Background="#FF323232" Foreground="#FFFFFFFF" FontSize="20" Command="{Binding Path=MultiplicationButtonEvent}"/>
      </StackPanel>
      <StackPanel Height="100" Orientation="Horizontal" Margin="0,5,0,5">
        <Button Width="100" Height="100" Margin="5,0,5,0" Content="1" Background="#FF323232" Foreground="#FFFFFFFF" FontSize="20" Command="{Binding Path=OneButtonEvent}"/>
        <Button Width="100" Height="100" Margin="5,0,5,0" Content="2" Background="#FF323232" Foreground="#FFFFFFFF" FontSize="20" Command="{Binding Path=TwoButtonEvent}"/>
        <Button Width="100" Height="100" Margin="5,0,5,0" Content="3" Background="#FF323232" Foreground="#FFFFFFFF" FontSize="20" Command="{Binding Path=ThreeButtonEvent}"/>
        <Button Width="100" Height="100" Margin="5,0,5,0" Content="-" Background="#FF323232" Foreground="#FFFFFFFF" FontSize="20" Command="{Binding Path=SubtractionButtonEvent}"/>
      </StackPanel>
      <StackPanel Height="100" Orientation="Horizontal" Margin="0,5,0,5">
        <Button Width="100" Height="100" Margin="5,0,5,0" Content="0" Background="#FF323232" Foreground="#FFFFFFFF" FontSize="20" Command="{Binding Path=ZeroButtonEvent}"/>
        <Button Width="100" Height="100" Margin="5,0,5,0" Content="." Background="#FF323232" Foreground="#FFFFFFFF" FontSize="20" Command="{Binding Path=DecimalButtonEvent}"/>
        <Button Width="100" Height="100" Margin="5,0,5,0" Content="=" Background="#FF323232" Foreground="#FFFFFFFF" FontSize="20" Command="{Binding Path=EqualsButtonEvent}"/>
        <Button Width="100" Height="100" Margin="5,0,5,0" Content="+" Background="#FF323232" Foreground="#FFFFFFFF" FontSize="20" Command="{Binding Path=AdditionButtonEvent}"/>
      </StackPanel>
    </StackPanel>
  </Grid>
</Page>
