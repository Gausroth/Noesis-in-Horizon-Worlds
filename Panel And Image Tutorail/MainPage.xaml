<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  d:DesignWidth="1920"
  d:DesignHeight="1080"
  Background="#FF4D5052" d:DataContext="MyStructure000 Data 01">
  <Grid x:Name="MasterPanel">
    <Grid x:Name="PanelOne" Visibility="{Binding Path=PanelOneVisibility}">
      <StackPanel>
        <TextBlock Text="This is panel one!" Width="250" Height="250" TextAlignment="Center" TextWrapping="Wrap" FontSize="50" Padding="25,25,25,25" Margin="50,50,50,50"/>
        <Button Width="250" Height="250" Margin="50,50,50,50" FontSize="50" Content="Next Panel" Padding="0,0,0,0" Command="{Binding Path=NextBtn}" CommandParameter="+1"/>
      </StackPanel>
    </Grid>
    <Grid x:Name="PanelTwo" Visibility="{Binding Path=PanelTwoVisibility}">
      <StackPanel>
        <TextBlock Text="This is panel two!" Width="250" Height="250" TextAlignment="Center" TextWrapping="Wrap" FontSize="50" Padding="25,25,25,25" Margin="50,50,50,50"/>
        <Image Height="250" Width="250" Source="{Binding Path=Image}"/>
        <StackPanel Height="500" Orientation="Horizontal" Margin="500,0,500,0">
          <Button Width="250" Height="250" Margin="140,50,70,50" FontSize="50" Padding="0,0,0,0" Content="Last Panel" Command="{Binding Path=NextBtn}" CommandParameter="-1"/>
          <Button Width="250" Height="250" Margin="70,50,140,50" FontSize="50" Padding="0,0,0,0" HorizontalAlignment="Right" Content="Next Image" Command="{Binding Path=ImageBtn}"/>
        </StackPanel>
      </StackPanel>
    </Grid>
  </Grid>
</Page>
