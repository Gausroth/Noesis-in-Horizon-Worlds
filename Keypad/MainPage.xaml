<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  d:DesignWidth="1280"
  d:DesignHeight="720" Height="650" Width="400" Foreground="#FF000000" d:DataContext="KeypadStructure Data">
  <Grid>
    <Border BorderThickness="5,5,5,5" BorderBrush="#FF000000" Background="#FF323232" CornerRadius="25,25,25,25"/>
    <StackPanel>
      <Border BorderThickness="5,5,5,5" BorderBrush="#FF000000" Height="100" Background="#FF646464" CornerRadius="25,25,25,25" Margin="25,25,25,12.5" Padding="25,25,25,25">
        <TextBlock x:Name="DisplayText" Text="{Binding Path=DisplayText}" TextWrapping="Wrap" FontSize="31"/>
      </Border>
      <StackPanel x:Name="RowOne" Height="100" Orientation="Horizontal" Margin="25,12.5,25,12.5">
        <Border x:Name="Seven" BorderThickness="5,5,5,5" BorderBrush="#FF000000" Width="100" Margin="0,0,12.4,0" Background="#FF646464" CornerRadius="25,25,25,25">
          <Button Foreground="#FF000000" FontSize="50" Command="{Binding Path=Button}" CommandParameter="7" Padding="0,0,0,0" Content="7" BorderBrush="{x:Null}">
            <Button.Background>
              <SolidColorBrush Color="#FF000000" Opacity="0"/>
            </Button.Background>
          </Button>
        </Border>
        <Border x:Name="Eight" BorderThickness="5,5,5,5" BorderBrush="#FF000000" Width="100" CornerRadius="25,25,25,25" Margin="12.4,0,12.4,0" Background="#FF646464">
          <Button Foreground="#FF000000" BorderBrush="{x:Null}" FontSize="50" Command="{Binding Path=Button}" CommandParameter="8" Padding="0,0,0,0" Content="8">
            <Button.Background>
              <SolidColorBrush Color="#FF000000" Opacity="0"/>
            </Button.Background>
          </Button>
        </Border>
        <Border x:Name="Nine" BorderThickness="5,5,5,5" BorderBrush="#FF000000" Width="100" CornerRadius="25,25,25,25" Margin="12.4,0,12.4,0" Background="#FF646464">
          <Button Foreground="#FF000000" BorderBrush="{x:Null}" FontSize="50" Content="9" Command="{Binding Path=Button}" CommandParameter="9" Padding="0,0,0,0">
            <Button.Background>
              <SolidColorBrush Color="#FF000000" Opacity="0"/>
            </Button.Background>
          </Button>
        </Border>
      </StackPanel>
      <StackPanel x:Name="RowTwo" Height="100" Orientation="Horizontal" Margin="25,12.5,25,12.5">
        <Border x:Name="Six" BorderThickness="5,5,5,5" BorderBrush="#FF000000" Width="100" CornerRadius="25,25,25,25" Margin="0,0,12.4,0" Background="#FF646464">
          <Button Foreground="#FF000000" BorderBrush="{x:Null}" FontSize="50" Content="6" Command="{Binding Path=Button}" CommandParameter="6" Padding="0,0,0,0">
            <Button.Background>
              <SolidColorBrush Color="#FF000000" Opacity="0"/>
            </Button.Background>
          </Button>
        </Border>
        <Border x:Name="Five" BorderThickness="5,5,5,5" BorderBrush="#FF000000" Width="100" CornerRadius="25,25,25,25" Margin="12.4,0,12.4,0" Background="#FF646464">
          <Button Foreground="#FF000000" BorderBrush="{x:Null}" FontSize="50" Content="5" Command="{Binding Path=Button}" CommandParameter="5" Padding="0,0,0,0">
            <Button.Background>
              <SolidColorBrush Color="#FF000000" Opacity="0"/>
            </Button.Background>
          </Button>
        </Border>
        <Border x:Name="Four" BorderThickness="5,5,5,5" BorderBrush="#FF000000" Width="100" CornerRadius="25,25,25,25" Margin="12.4,0,12.4,0" Background="#FF646464">
          <Button Foreground="#FF000000" BorderBrush="{x:Null}" FontSize="50" Content="4" Command="{Binding Path=Button}" CommandParameter="4" Padding="0,0,0,0">
            <Button.Background>
              <SolidColorBrush Color="#FF000000" Opacity="0"/>
            </Button.Background>
          </Button>
        </Border>
      </StackPanel>
      <StackPanel x:Name="RowThree" Height="100" Orientation="Horizontal" Margin="25,12.5,25,12.5">
        <Border x:Name="Three" BorderThickness="5,5,5,5" BorderBrush="#FF000000" Width="100" CornerRadius="25,25,25,25" Margin="0,0,12.4,0" Background="#FF646464">
          <Button Foreground="#FF000000" BorderBrush="{x:Null}" FontSize="50" Content="3" Command="{Binding Path=Button}" CommandParameter="3" Padding="0,0,0,0">
            <Button.Background>
              <SolidColorBrush Color="#FF000000" Opacity="0"/>
            </Button.Background>
          </Button>
        </Border>
        <Border x:Name="Two" BorderThickness="5,5,5,5" BorderBrush="#FF000000" Width="100" CornerRadius="25,25,25,25" Margin="12.4,0,12.4,0" Background="#FF646464">
          <Button Foreground="#FF000000" BorderBrush="{x:Null}" FontSize="50" Content="2" Command="{Binding Path=Button}" CommandParameter="2" Padding="0,0,0,0">
            <Button.Background>
              <SolidColorBrush Color="#FF000000" Opacity="0"/>
            </Button.Background>
          </Button>
        </Border>
        <Border x:Name="One" BorderThickness="5,5,5,5" BorderBrush="#FF000000" Width="100" CornerRadius="25,25,25,25" Margin="12.4,0,12.4,0" Background="#FF646464">
          <Button Foreground="#FF000000" BorderBrush="{x:Null}" FontSize="50" Content="1" Command="{Binding Path=Button}" CommandParameter="1" Padding="0,0,0,0">
            <Button.Background>
              <SolidColorBrush Color="#FF000000" Opacity="0"/>
            </Button.Background>
          </Button>
        </Border>
      </StackPanel>
      <StackPanel x:Name="FourFour" Height="100" Orientation="Horizontal" Margin="25,12.5,25,12.5">
        <Border x:Name="Clear" BorderThickness="5,5,5,5" BorderBrush="#FF000000" Width="100" CornerRadius="25,25,25,25" Margin="0,0,12.4,0" Background="#FF646464">
          <Button Foreground="#FF000000" BorderBrush="{x:Null}" FontSize="50" Command="{Binding Path=Button}" CommandParameter="X" Padding="0,0,0,0" Content="X">
            <Button.Background>
              <SolidColorBrush Color="#FF000000" Opacity="0"/>
            </Button.Background>
          </Button>
        </Border>
        <Border x:Name="Zero" BorderThickness="5,5,5,5" BorderBrush="#FF000000" Width="100" CornerRadius="25,25,25,25" Margin="12.4,0,12.4,0" Background="#FF646464">
          <Button Foreground="#FF000000" BorderBrush="{x:Null}" FontSize="50" Command="{Binding Path=Button}" CommandParameter="0" Padding="0,0,0,0" Content="0">
            <Button.Background>
              <SolidColorBrush Color="#FF000000" Opacity="0"/>
            </Button.Background>
          </Button>
        </Border>
        <Border x:Name="Enter" BorderThickness="5,5,5,5" BorderBrush="#FF000000" Width="100" CornerRadius="25,25,25,25" Margin="12.4,0,12.4,0" Background="#FF646464">
          <Button Foreground="#FF000000" BorderBrush="{x:Null}" FontSize="50" Content="E" Command="{Binding Path=Button}" CommandParameter="E" Padding="0,0,0,0">
            <Button.Background>
              <SolidColorBrush Color="#FF000000" Opacity="0"/>
            </Button.Background>
          </Button>
        </Border>
      </StackPanel>
    </StackPanel>
  </Grid>
</Page>
